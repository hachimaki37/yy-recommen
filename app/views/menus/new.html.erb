<div class="d-flex align-items-center">
  <h1>投稿</h1>
  <div class="ml-auto posts_button">
      <a class="btn btn-outline-info" href="/menus">投稿一覧</a>
  </div>
</div>

<%= form_for @menus do |f| %>
  <div class="form-group">
      <%= f.label :name, 'メニュー名' %>
      <%= f.text_field :name, class: 'form-control' %>
      <small id="poster-tip" class="form-text text-muted">
          あなたの名前を入力してください。
      </small>
  </div>
  <div class="form-group">
      <%= f.label :recommend_title, 'こんな時にオススメ！' %>
      <%= f.text_field :recommend_title, class: 'form-control' %>
      <small id="title-tip" class="form-text text-muted">
          タイトルを入力してください。
      </small>
  </div>
  <div class="form-group">
      <%= f.label :description, 'おすすめ内容' %>
      <%= f.text_area :description, class: 'form-control', rows:10 %>
      <small id="content-tip" class="form-text text-muted">
          投稿内容を入力してください。
      </small>
  </div>
  <%= f.submit 'オススメを投稿する', class: 'btn btn-info btn-block' %>
  <small id="submit-tip" class="form-text text-muted">
      投稿する前に投稿内容を見直してください!
  </small>
<% end %>